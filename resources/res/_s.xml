<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/rlFloatingMenu" android:background="@drawable/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/normal_1920x720_navi_float_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="0px" android:layout_alignParentBottom="true">
        <RelativeLayout android:orientation="vertical" android:id="@+id/rlFloatingMain" android:padding="20px" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageButton android:id="@+id/btnFloatReturn" android:background="@drawable/btn_return_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px"/>
            <ImageButton android:id="@+id/btnFloatHalfScreen" android:background="@drawable/btn_half_screen_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:layout_toRightOf="@+id/btnFloatReturn"/>
            <ImageButton android:id="@+id/btnFloatFullScreen" android:background="@drawable/btn_full_screen_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:layout_toRightOf="@+id/btnFloatHalfScreen"/>
            <ImageButton android:id="@+id/btnFloatHome" android:background="@drawable/btn_home_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:layout_toRightOf="@+id/btnFloatFullScreen"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="1069dp" android:layout_height="52dp">
    <ImageView android:background="@drawable/kesaiwei_benz_air_di" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/viewAirOn" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/rlFrontWinMaxOffShow" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="center" android:id="@+id/tvAirLeftTemp" android:layout_width="wrap_content" android:layout_height="60dp" android:layout_marginTop="0dp" android:text="20.0℃" android:layout_marginStart="20dp"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="center" android:id="@+id/tvAirRightTemp" android:layout_width="150dp" android:layout_height="60dp" android:layout_marginTop="0dp" android:text="20.0℃" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="center_vertical" android:id="@+id/tvECO" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="ECO" android:layout_marginStart="120dp"/>
            <RelativeLayout android:id="@+id/viewWindLeft" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="180dp">
                <ImageView android:background="@drawable/kesaiwei_benz_air_xiaoren" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="23dp"/>
                <CheckBox android:id="@+id/cbAirLeftWindUp" android:background="@drawable/ksw_benz_chk_wind_up" android:clickable="false" android:layout_width="27dp" android:layout_height="17dp" android:layout_marginTop="5dp" android:checked="true" android:button="@null" android:layout_marginStart="8dp"/>
                <CheckBox android:id="@+id/cbAirLeftWindParallel" android:background="@drawable/ksw_benz_chk_wind_front" android:clickable="false" android:layout_width="16dp" android:layout_height="12dp" android:layout_marginTop="18dp" android:checked="true" android:button="@null" android:layout_marginStart="32dp"/>
                <CheckBox android:id="@+id/cbAirLeftWindDown" android:background="@drawable/ksw_benz_chk_wind_down" android:clickable="false" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginTop="28dp" android:checked="true" android:button="@null" android:layout_marginStart="15dp"/>
                <CheckBox android:id="@+id/cbAirLeftWindAuto" android:background="@drawable/ksw_benz_chk_wind_auto" android:clickable="false" android:layout_width="49dp" android:layout_height="17dp" android:layout_marginTop="8dp" android:checked="true" android:button="@null" android:layout_marginStart="6dp"/>
            </RelativeLayout>
            <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="center_vertical" android:id="@+id/tvSync" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="SYNC" android:layout_marginStart="535dp"/>
            <CheckBox android:id="@+id/cbAirAc" android:background="@drawable/ksw_benz_chk_air_ac" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:button="@null" android:layout_marginStart="617dp"/>
            <CheckBox android:id="@+id/cbAircirCulat" android:background="@drawable/ksw_benz_chk_air_circulation" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:button="@null" android:layout_marginStart="724dp"/>
            <RelativeLayout android:id="@+id/viewWindRight" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="829dp">
                <ImageView android:background="@drawable/kesaiwei_benz_air_xiaoren" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="23dp"/>
                <CheckBox android:id="@+id/cbAirRightWindUp" android:background="@drawable/ksw_benz_chk_wind_up" android:clickable="false" android:layout_width="27dp" android:layout_height="17dp" android:layout_marginTop="5dp" android:checked="true" android:button="@null" android:layout_marginStart="8dp"/>
                <CheckBox android:id="@+id/cbAirRightWindParallel" android:background="@drawable/ksw_benz_chk_wind_front" android:clickable="false" android:layout_width="16dp" android:layout_height="12dp" android:layout_marginTop="18dp" android:checked="true" android:button="@null" android:layout_marginStart="32dp"/>
                <CheckBox android:id="@+id/cbAirRightWindDown" android:background="@drawable/ksw_benz_chk_wind_down" android:clickable="false" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginTop="28dp" android:checked="true" android:button="@null" android:layout_marginStart="15dp"/>
                <CheckBox android:id="@+id/cbAirRightWindAuto" android:background="@drawable/ksw_benz_chk_wind_auto" android:clickable="false" android:layout_width="49dp" android:layout_height="17dp" android:layout_marginTop="8dp" android:checked="true" android:button="@null" android:layout_marginStart="6dp"/>
            </RelativeLayout>
            <CheckBox android:id="@+id/cbAirRearWin" android:background="@drawable/ksw_benz_chk_air_rear_frost" android:clickable="false" android:layout_width="95dp" android:layout_height="match_parent" android:checked="true" android:button="@null" android:layout_toRightOf="@+id/viewWindRight" android:layout_marginStart="10dp"/>
        </RelativeLayout>
        <CheckBox android:id="@+id/cbAirFrontWin" android:background="@drawable/ksw_benz_chk_air_front_frost" android:clickable="false" android:layout_width="78dp" android:layout_height="28dp" android:checked="true" android:button="@null" android:layout_centerVertical="true" android:layout_marginStart="280dp"/>
        <ImageView android:id="@+id/cbAirWindSpeed" android:background="@drawable/kesaiwei_benz_air_fengshan" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:layout_marginStart="385dp"/>
        <CheckBox android:id="@+id/cbAirWindSpeedAuto" android:background="@drawable/ksw_benz_chk_wind_auto" android:clickable="false" android:layout_width="49dp" android:layout_height="17dp" android:checked="true" android:button="@null" android:layout_centerVertical="true" android:layout_marginStart="-40dp" android:layout_toEndOf="@+id/cbAirWindSpeed"/>
        <TextView android:textSize="22sp" android:textColor="#fff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/tvAirWindSpeed" android:layout_width="60dp" android:layout_height="match_parent" android:text="0.0" android:layout_marginStart="-40dp" android:layout_toEndOf="@+id/cbAirWindSpeed"/>
    </RelativeLayout>
    <TextView android:textSize="30sp" android:textStyle="normal" android:textColor="#fff" android:gravity="center" android:id="@+id/tvAirOff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/lb_air_closed"/>
</RelativeLayout>

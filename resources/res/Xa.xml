        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="27sp" android:textColor="#fff" android:gravity="center" android:id="@+id/importResult" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/lb_import_tip_importing"/>
</RelativeLayout>
